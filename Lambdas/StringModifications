package modifyString;

import java.util.function.Function;
public class LambdaTester {
    static String modifyString (String string, Function<String, String> function){
       return function.apply(string);
    }
    static Integer countString (String string, Function<String, Integer> function){
        return function.apply(string);
    }
    public static void main(String[] args) {
        Function<String, String> toUpperCase = (n) -> {
            return n.toUpperCase();
        };
        Function<String, String> toLowerCase = (n) -> {
            return n.toLowerCase();
        };
        Function<String, String> firstLetter = (n) -> {
            return n.valueOf(n.charAt(0));
        };
        Function<String, String> lastLetter = (n) -> {
            return n.valueOf(n.charAt(n.length()-1));
        };

        System.out.println(modifyString("laMBda",toUpperCase));
        System.out.println(modifyString("TRUMP",toLowerCase));
        System.out.println(modifyString("Duda",firstLetter));
        System.out.println(modifyString("Trzaskowski",lastLetter));


        Function<String, Integer> stringLength = (n) ->{
            return n.length();
        };
        Function<String, Integer> stringNumber = (n) ->{

            return n.split(" ").length;
        };
        
            System.out.println(countString("mama≈Çyga",stringLength));
            System.out.println(countString("java kawa zabawa",stringNumber));
    }
    }

