package modifyString;

import java.util.function.Function;
public class LambdaExercise {
    static String modifyString (String string, Function<String, String> function){
       return function.apply(string);
    }
    static Integer countString (String string, Function<String, Integer> function){
        return function.apply(string);
    }
    public static void main(String[] args) {
        String text = "Java kawa ZABAWA";
        // Lambdas based on methods from some class
        System.out.println(modifyString(text,n -> n.toUpperCase()));
        System.out.println(modifyString(text,n -> n.toLowerCase()));
        System.out.println(modifyString(text,n -> n.valueOf(n.charAt(0))));
        System.out.println(modifyString(text,n -> n.valueOf(n.charAt(n.length()-1))));
        System.out.println(countString(text,n -> n.length()));
        System.out.println(countString(text, n -> n.split(" ").length));
        System.out.println("\n-------------------------------------------------------------\n");
        //Step by Step.

        Function<String, String> function = n -> n.toUpperCase();
        Function<String, String> function2 = n -> n.toLowerCase();
        Function<String, String> function3 = n -> n.valueOf(n.charAt(0));
        Function<String, String> function4 = n -> n.valueOf(n.charAt(n.length()-1));
        Function<String, Integer> function5 = n -> n.length();
        Function<String, Integer> function6 = n -> n.split(" ").length;

        String functionResult = function.apply(text);
        String function2Result = function2.apply(text);
        String function3Result = function3.apply(text);
        String function4Result = function4.apply(text);
        Integer function5Result = function5.apply(text);
        Integer function6Result = function6.apply(text);

        System.out.println(functionResult);
        System.out.println(function2Result);
        System.out.println(function3Result);
        System.out.println(function4Result);
        System.out.println(function5Result);
        System.out.println(function6Result);

    }
    }

