import java.util.Scanner;

public class If {
	public static void main(String[] args) {
		Scanner text = new Scanner(System.in);
		String keyWord = "exit";
		String input;
		boolean check;
		do {
			System.out.println("Enter a word:");
			input = text.nextLine();
			check = input.equalsIgnoreCase(keyWord);
		} while (!check);
		System.out.println("U got it!");

	}
}
