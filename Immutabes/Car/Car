
package Car;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class CarTest {
	public static void main(String[] args) {
		Wheel alu = new Wheel(125, 250);
		Wheel steel = new Wheel(100, 200);
		List<Wheel> aluWheels = List.of(alu);
		// aluWheels.add(steel); THROWS AN EXCEPTION
		List<Wheel> steelWheels = new ArrayList<>();
		steelWheels.add(steel);
		List<Wheel> unmodifSteelWheels = Collections.unmodifiableList(steelWheels);
		// unmodifSteelWheels.add(alu);// THROWS AN EXCEPTION
		Engine TDI = new Engine("diesel", 170, 2.0);
		Car seat = new Car("seat", "leon", TDI, aluWheels);
		seat.getEngine().setHorsePower(0); // DOES NOTHING
		seat.getEngine().setType("petrol"); // DOES NOTHING
		System.out.println(seat.toString());

		Engine TFSI = new Engine("petrol", 250, 2.0);
		Car volkswagen = new Car("Volkswagen", "golf", TFSI, unmodifSteelWheels);
		System.out.println(volkswagen.toString());
	}
}
