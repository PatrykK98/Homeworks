package Car;

import java.util.ArrayList;
import java.util.List;

public final class Car {
	private final String manufacturer;
	private final String model;
	private final Engine eng;
	private final List<Wheel> wheels;
	public Car(String manufacturer, String model, Engine eng, List<Wheel> aluWheels) {
		this.manufacturer = manufacturer;
		this.model = model;
		//this.engine = new Engine(engine.type, engine.horsePower, engine.volume);
		this.eng=eng;
		this.wheels=aluWheels;
	}


	public String getManufacturer() {
		return manufacturer;
	}

	public String getModel() {
		return model;
	}

	public Engine getEngine() {
		return new Engine(eng.getType(), eng.getHorsePower(), eng.getVolume());// completely immutable
	}

	@Override
	public String toString() {
		return "Car [manufacturer=" + manufacturer + ", model=" + model + ", eng=" + eng + ", wheels=" + wheels + "]";
	}
	public List<Wheel> getWheels() {
		return new ArrayList<>(wheels);
	}
}


